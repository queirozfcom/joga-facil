<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">


    <div class="col-md-6">

      <p>
        <strong>Data:</strong>
        <%= @pelada.data.strftime("%d/%m/%Y às %H:%M") %>
      </p>

      <p>
        <strong>Local:</strong>
        <%= @pelada.local %>
      </p>

      <p>
        <strong>Minimo pessoas:</strong>
        <%= @pelada.minimo_pessoas %>
      </p>

      <p>Máximo pessoas:</strong>
        <%= @pelada.maximo_pessoas %>
      </p>

      <p>
        <strong>Custo:</strong>
        <%= number_to_currency(@pelada.custo) %>
      </p>

      <p>
        <strong>Responsavel:</strong>
        <%= @pelada.responsavel %>
      </p>

      <%= link_to 'Editar', edit_pelada_path(@pelada) %> |
      <%= link_to 'Jogar', join_pelada_path(@pelada) %> |
      <%= link_to 'Voltar', peladas_path %>
    </div>

    <div class="col-md-offset-6">

      <%= render partial: 'grid_participantes' %>
    </div>

  </div>

</div>