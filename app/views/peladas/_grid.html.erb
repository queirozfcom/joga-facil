<%= define_grid(@peladas_grid) do |g|

  g.column name: 'Data' do |p|
    p.data.strftime("%d/%m/%Y às %H:%M")
  end

  g.column name: 'Local',attribute: 'local', detach_with_id: :local_filter do |p|
    p.local
  end

  g.column name:'Mínimo pessoas' do |p|
    p.minimo_pessoas
  end

  g.column name:'Máximo pessoas' do |p|
    p.maximo_pessoas
  end

  g.column name: 'Custo' do |p|
    p.custo
  end

  g.column name: 'Responsável' do |p|
    p.responsavel
  end

  g.column name: 'Participantes' do |p|
    p.usuario.count
  end


  g.column do |p|
    link_to( 'Visualizar', pelada_path(p))
  end

  g.column do |p|
    link_to( 'Entrar', join_pelada_path(p))
  end

  g.column do |p|
    link_to('Editar', edit_pelada_path(p))
  end
end -%>
